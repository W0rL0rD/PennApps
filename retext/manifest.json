{
	"name": "ReText",
	"manifest_version": 3,
	"version": "1.0",
	"description": "An AI based text processing tool to rectify and simplify your texts so that your texting experience is as smooth as possible.",
	"icons": {
		"16":"./images/16-logo.jpeg",
		"48":"./images/48-logo.jpeg",
		"128":"./images/128-logo.jpeg"
	},
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_icon": "./images/48-logo.jpeg",
		"default_popup": "./index.html",
		"default_title": "ReText"
	},
	"content_scripts":[
		{ 
		"matches":["<all_urls>"],
		"css":["./src/App.css"],
		"js":["./src/main.jsx","./src/App.jsx"]
  }], 
	"web_accessible_resources": [
		{ 
		"resources": ["./images/16-logo.jpeg","./images/48-logo.jpeg", "./images/128-logo.jpeg" ],
		"matches":["<all_urls>"],
		"css":["./src/App.css"],
		"js":["./src/main.jsx","./src/App.jsx"]
  }]
}
