{
	"name": "ReText",
	"manifest_version": 3,
	"version": "1.0",
	"description": "An AI based text processing tool to rectify and simplify your texts so that your texting experience is as smooth as possible.",
	"icons": {
		"16":"./logos/16-logo.jpeg",
		"48":"./logos/48-logo.jpeg",
		"128":"./logos/128-logo.jpeg"
	},
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_icon": "./logos/48-logo.jpeg",
		"default_popup": "./index.html",
		"default_title": "ReText"
	},
	"content_scripts": { 
		"matches":"<all_urls>"
  },
	"web_accessible_resources": {
		"matches":"<all_urls>"
	}
}
